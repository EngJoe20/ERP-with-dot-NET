@using ERP_MVC.Models.DTOs.Inventory.Product.Responses
@model ProductResponseDto

@{
    ViewData["Title"] = $"Details - {Model.Name}";
}

<div class="container-fluid p-0">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="d-flex align-items-center mb-3 mb-md-0">
            <h1 class="h3 mb-0 text-dark fw-bold me-3">
                <i class="fa-solid fa-box text-primary me-2"></i> @Model.Name
            </h1>
            @if (!string.IsNullOrEmpty(Model.CategoryName) && Model.CategoryName != "Uncategorized")
            {
                <span class="badge bg-primary text-white rounded-pill px-3 py-2">@Model.CategoryName</span>
            }
        </div>
        
        <div class="d-flex gap-2">
            <a asp-action="AddVariation" asp-route-productId="@Model.Id" class="btn btn-success text-white shadow-sm fw-semibold">
                <i class="fa-solid fa-plus"></i> Add Variation
            </a>
        </div>
    </div>

    <hr class="mb-4" />

    <h5 class="mb-3 text-dark fw-bold">
        <i class="fa-solid fa-tags me-2 text-primary"></i> Product Variations
    </h5>

    <div class="row g-4">
        @if (Model.Variations != null && Model.Variations.Any())
        {
            @foreach (var variation in Model.Variations)
            {
                <div class="col-lg-6 col-xl-4">
                    <div class="card h-100 border shadow-sm">
                        <div style="height: 4px; background: linear-gradient(to right, #4e73df, #36b9cc);"></div>
                        
                        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center py-3">
                            <h5 class="m-0 fw-bold">
                                @variation.Name
                            </h5>
                            <span class="badge bg-white text-primary border fw-semibold px-3 py-2">@variation.SKU</span>
                        </div>

                        <div class="card-body pt-3">
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(variation.Flavor))
                                {
                                    <span class="badge bg-info text-white rounded-pill px-3 py-2 fw-normal">
                                        <i class="fa-solid fa-leaf me-1"></i> @variation.Flavor
                                    </span>
                                }
                            </div>

                            @if (variation.Packages != null && variation.Packages.Any())
                            {
                                <div class="d-flex flex-column gap-3">
                                    @foreach (var pkg in variation.Packages)
                                    {
                                        <div class="p-3 border rounded-3 bg-white shadow-sm position-relative overflow-hidden">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <strong class="text-dark fs-6">
                                                    <i class="fa-solid fa-box-open text-primary me-2"></i> @pkg.PackageTypeName
                                                </strong>
                                                <small class="text-secondary fw-semibold">@pkg.Barcode</small>
                                            </div>
                                            
                                            <div class="row g-2 mt-1">
                                                <div class="col-12 mb-2">
                                                    <div class="d-flex align-items-center bg-light p-2 rounded">
                                                        <i class="fa-solid fa-layer-group me-2 text-primary"></i>
                                                        <span class="text-secondary me-2">Contains:</span>
                                                        <strong class="text-dark">@pkg.QinP.ToString("0.##") Units</strong>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <div class="bg-light p-2 rounded text-center">
                                                        <small class="d-block text-secondary fw-semibold mb-1">Buy Price</small>
                                                        <strong class="text-danger fs-6">$@pkg.PurchasePrice.ToString("N2")</strong>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="bg-light p-2 rounded text-center">
                                                        <small class="d-block text-secondary fw-semibold mb-1">Sell Price</small>
                                                        <strong class="text-success fs-6">$@pkg.SalesPrice.ToString("N2")</strong>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-12 mt-2">
                                                    <div class="d-flex justify-content-between align-items-center bg-success bg-opacity-10 p-2 rounded border border-success">
                                                        <span class="text-dark fw-semibold">Total Stock:</span>
                                                        <span class="badge bg-success text-white px-3 py-2">
                                                            @pkg.CurrentStock.ToString("N0") Units
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center p-4 border border-2 border-dashed rounded bg-light">
                                    <i class="fa-solid fa-box-open text-secondary fs-3 mb-2"></i>
                                    <p class="text-secondary mb-0 fw-semibold">No packages defined.</p>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-white border-top pb-3">
                            <a asp-action="AddPackage" 
                               asp-route-variationId="@variation.Id" 
                               asp-route-productId="@Model.Id" 
                               class="btn btn-outline-primary w-100 btn-sm border-2 fw-semibold">
                                <i class="fa-solid fa-plus-circle me-2"></i> Add Another Package
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-light border-2 shadow-sm text-center p-5">
                    <div class="mb-3 text-warning display-4"><i class="fa-solid fa-box-open"></i></div>
                    <h5 class="text-dark fw-bold mb-3">No Variations Found</h5>
                    <p class="text-secondary mb-4">Start by adding the first variation for this product.</p>
                    <a asp-action="AddVariation" asp-route-productId="@Model.Id" class="btn btn-primary text-white fw-semibold px-4 py-2">
                        <i class="fa-solid fa-plus me-2"></i> Create First Variation
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .border-dashed { 
        border-style: dashed !important; 
    }
    
    .bg-opacity-10 { 
        --bs-bg-opacity: 0.1; 
    }
    
    .hover-shadow:hover { 
        box-shadow: 0 .25rem .5rem rgba(0,0,0,.15);
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }
    
    .text-secondary {
        color: #6c757d !important;
    }
    
    .card-header h5 {
        font-size: 1.1rem;
        letter-spacing: 0.3px;
    }
    
    .badge {
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    small {
        font-size: 0.875rem;
    }
</style>