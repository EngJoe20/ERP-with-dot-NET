@using ERP_MVC.Models.DTOs.Inventory.Product
@model IEnumerable<ProductSummaryDto>

@{
    ViewData["Title"] = "Product List";
}

<div class="container p-4">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">Product List</h2>
        <a href="#" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            + Add New
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-lg overflow-hidden">
            <thead class="bg-gray-100 text-gray-700">
                <tr>
                    <th class="py-3 px-4 text-left font-semibold">ID</th>
                    <th class="py-3 px-4 text-left font-semibold">Product Name</th>
                    <th class="py-3 px-4 text-left font-semibold">Variations Count</th>
                    <th class="py-3 px-4 text-center font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600">
                @foreach (var product in Model)
                {
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4">@product.Id</td>
                        <td class="py-3 px-4 font-medium text-black">@product.Name</td>
                        <td class="py-3 px-4">
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">
                                @product.VariationCount Variations
                            </span>
                        </td>
                        <td class="py-3 px-4 text-center">
                            <a asp-action="Details" asp-route-id="@product.Id" class="text-blue-500 hover:underline">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center p-10 bg-gray-50 border rounded text-gray-500">
            <p>No products found. API connection might be empty or broken.</p>
        </div>
    }
</div>