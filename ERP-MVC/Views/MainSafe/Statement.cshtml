@model List<ERP_MVC.Models.DTOs.Finance.MainSafeLedgerEntryDto>
@{
    ViewData["Title"] = "Secure Account Statement";
    var mainSafe = ViewBag.MainSafe as ERP_MVC.Models.DTOs.Finance.MainSafeDto;
    var summary = ViewBag.Summary as ERP_MVC.Models.DTOs.Finance.MainSafeLedgerSummaryDto;
}



    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <h5 class="card-title cash-title">@mainSafe?.SafeName - Secure Account Statement</h5>

    @if (summary != null)
    {
    <p class="ledger-notes">Opening Balance: @mainSafe.OpeningBalance.ToString("N2") EGP (Cash in Hand)</p>
        <p class="ledger-notes">Current Balance: @mainSafe.CurrentBalance.ToString("N2") EGP (Cash in Hand)</p>
        @if (summary.PeriodStart.HasValue && summary.PeriodEnd.HasValue)
        {
            <p class="ledger-notes">Period: @summary.PeriodStart.Value.ToString("yyyy-MM-dd") to @summary.PeriodEnd.Value.ToString("yyyy-MM-dd")</p>
        }
    }
    else
    {
        <p class="ledger-notes">Opening Balance: @mainSafe.OpeningBalance.ToString("N2") EGP (Cash in Hand)</p>
        <p class="ledger-notes">Current Balance: @mainSafe.CurrentBalance.ToString("N2") EGP (Cash in Hand)</p>
    }

    <!-- Filter Form -->
    <div class="col-lg-12 mx-auto mb-3">
        <div class="card">
            <div class="card-body">
                <form method="get" asp-action="Statement" class="form-inline">
                    <div class="form-group mr-3">
                        <label for="startDate" class="mr-2">Start Date:</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group mr-3">
                        <label for="endDate" class="mr-2">End Date:</label>
                        <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="@Url.Action("Statement", "MainSafe")" class="btn btn-secondary ml-2">Clear</a>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Date</th>
                                <th scope="col">Description</th>
                                <th scope="col">Debit Amount</th>
                                <th scope="col">Credit Amount</th>
                                <th scope="col">Balance After Transaction</th>
                                <th scope="col">Reference Table</th>
                                <th scope="col">Reference ID</th>
                                <th scope="col">Direction</th>
                                <th scope="col">User</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int counter = 1;
                                foreach (var entry in Model)
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>@entry.EntryTimestamp.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@(entry.EntryDescription ?? "-")</td>
                                        <td>@entry.DebitAmount.ToString("N2")</td>
                                        <td>@entry.CreditAmount.ToString("N2")</td>
                                        <td>@entry.BalanceAfterEntry.ToString("N2")</td>
                                        <td>@entry.ReferenceTable</td>
                                        <td>@entry.ReferenceRecordId</td>
                                        <td>
                                            @if (entry.Direction == "In")
                                            {
                                                <span class="badge badge-success">Incoming</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Outgoing</span>
                                            }
                                        </td>
                                        <td>@entry.PerformedByUserName</td>
                                        <td>
                                            <a href="@Url.Action("EntryDetails", "MainSafe", new { id = entry.Id })"
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="zmdi zmdi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center">No ledger entries found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @if (summary != null)
    {
        <div class="col-lg-12 mx-auto mt-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Summary</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <p><strong>Total Entries:</strong> @summary.TotalEntries</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Total Debits:</strong> @summary.TotalDebits.ToString("N2") EGP</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Total Credits:</strong> @summary.TotalCredits.ToString("N2") EGP</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Net Change:</strong> @((summary.TotalCredits - summary.TotalDebits).ToString("N2")) EGP</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="overlay toggle-menu"></div>
