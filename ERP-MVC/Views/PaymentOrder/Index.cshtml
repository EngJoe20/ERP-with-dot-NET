@model IEnumerable<ERP_MVC.Models.DTOs.Finance.PaymentOrderDto>
@{
    ViewData["Title"] = "Payment Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 mx-auto products-list">
    <div class="card">
        <div class="card-body">
            <div class="row g-2 add-item-button align-items-center mb-3">
                <h5 class="card-title product-list-title col-auto mt-2">Payment Orders</h5>
                <div class="col-auto ms-auto">
                    <a asp-action="Create" class="btn btn-light btn-round px-4">
                        <i class="fa fa-plus mr-2"></i>New Payment
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Date</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Payment To</th>
                            <th scope="col">Description</th>
                            <th scope="col">Balance After</th>
                            <th scope="col">By</th>
                            @* <th scope="col">Actions</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var counter = 1;
                            foreach (var payment in Model)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@payment.EntryTimestamp.ToString("yyyy-MM-dd")</td>
                                    <td class="text-danger font-weight-bold">@payment.DebitAmount.ToString("N2")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.CustomerName))
                                        {
                                            <span class="badge badge-info">Customer</span>
                                            <span>@payment.CustomerName</span>
                                        }
                                        else if (!string.IsNullOrEmpty(payment.SupplierName))
                                        {
                                            <span class="badge badge-warning">Supplier</span>
                                            <span>@payment.SupplierName</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Other</span>
                                        }
                                    </td>
                                    <td>@(payment.EntryDescription ?? "N/A")</td>
                                    <td>@payment.BalanceAfterEntry.ToString("N2")</td>
                                    <td>@payment.PerformedByUserName</td>
                                    @* <td>
                                        <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-sm btn-light" title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger"
                                                onclick="confirmDelete(@payment.Id)" title="Delete">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td> *@
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <div class="py-4">
                                        <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No payment orders found</p>
                                        <a asp-action="Create" class="btn btn-light btn-round px-4">
                                            <i class="fa fa-plus mr-2"></i>Create First Payment
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-muted">
                                Total Records: <strong>@Model.Count()</strong>
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <p class="text-muted">
                                Total Amount: <strong class="text-danger">@Model.Sum(r => r.DebitAmount).ToString("N2")</strong>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Form -->
<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this payment order?')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
