@using ERP_MVC.Models.DTOs.Purchasing
@model IEnumerable<PurchaseInvoiceListItemDto>

@{
    ViewData["Title"] = "Purchase Invoices";
}

<div class="col-lg-12 mx-auto products-list">
    <div class="card">
        <div class="card-body">
            <div class="row g-2 add-item-button">
                <h5 class="card-title product-list-title">Purchase Invoices</h5>
                <a class="add-pro" asp-controller="PurchaseInvoice" asp-action="Create">
                    <button type="button" class="btn btn-light px-5">
                        <i class="fa-solid fa-plus"></i> Add Purchase Invoice
                    </button>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Invoice Number</th>
                            <th scope="col">Supplier</th>
                            <th scope="col">Date</th>
                            <th scope="col">Total Amount</th>
                            <th scope="col">Net Amount</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.RowNumber</th>
                                    <td>@item.InvoiceNumber</td>
                                    <td>@item.SupplierName</td>
                                    <td>@item.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td>@item.TotalAmount.ToString("N2")</td>
                                    <td>@item.NetAmount.ToString("N2")</td>
                                    <td>
                                        <div class="product-actions">
                                            <a asp-controller="PurchaseInvoice" asp-action="Details" asp-route-id="@item.Id" title="View Details">
                                                <i class="fa-solid fa-eye text-primary"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No invoices found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                icon: 'success',
                confirmButtonColor: '#10B981',
                timer: 3000
            });
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: 'Error!',
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                confirmButtonColor: '#EF4444'
            });
        });
    </script>
}