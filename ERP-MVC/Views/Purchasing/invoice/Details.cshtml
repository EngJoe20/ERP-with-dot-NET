@using ERP_MVC.Models.DTOs.Purchasing
@model PurchaseInvoiceResponseDto

@{
    ViewData["Title"] = "Purchase Invoice Details";
}

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-primary font-weight-bold">Purchase Invoice Details</h5>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to List</a>
                    </div>
                    <hr>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Invoice Number</label>
                                <p class="fw-bold">@Model.InvoiceNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Invoice Date</label>
                                <p class="fw-bold">@Model.InvoiceDate.ToString("yyyy-MM-dd")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Supplier</label>
                                <p class="fw-bold">@Model.SupplierName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Created By</label>
                                <p class="fw-bold">@Model.CreatedByUser</p>
                            </div>
                        </div>
                    </div>

                    <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3 mt-4">Invoice Items</h6>

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product Code</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Count</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    int counter = 1;
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.ProductCode</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.UnitCount</td>
                                            <td>@item.UnitPrice.ToString("N2")</td>
                                            <td>@item.Total.ToString("N2")</td>
                                        </tr>
                                        counter++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No items found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3 mt-4">Financial Summary</h6>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <label class="text-muted small">Total Amount</label>
                                    <h5 class="text-primary">@Model.TotalAmount.ToString("N2")</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <label class="text-muted small">Discount</label>
                                    <h5 class="text-warning">@Model.Discount.ToString("N2")</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <label class="text-muted small">Net Amount</label>
                                    <h5 class="text-success">@Model.NetAmount.ToString("N2")</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.PaymentOrderAmount.HasValue && Model.PaymentOrderAmount.Value > 0)
                    {
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <strong>Payment Order Generated:</strong> @Model.PaymentOrderAmount.Value.ToString("N2")
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small">Balance Before Invoice</label>
                                <p class="fw-bold">@Model.BalanceBefore.ToString("N2")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small">Balance After Invoice</label>
                                <p class="fw-bold">@Model.BalanceAfter.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group label {
        font-size: 0.85rem;
        margin-bottom: 0.25rem;
        display: block;
    }

    .info-group p {
        margin-bottom: 0;
        font-size: 1rem;
    }
</style>