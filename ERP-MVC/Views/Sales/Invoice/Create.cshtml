@using ERP_MVC.Models.DTOs.Sales
@model CreateSalesInvoiceDto

@{
    ViewData["Title"] = "Add New Sales Invoice";
}

<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="card-title d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-primary font-weight-bold">Add New Sales Invoice</h5>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Cancel</a>
                    </div>
                    <hr>

                    <form asp-action="Create" method="post" id="invoice-form">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Invoice Information</h6>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="CustomerId" class="form-label fw-bold">
                                    Customer <span class="text-danger">*</span>
                                </label>
                                @{
                                    var customerList = ViewBag.CustomerList as IEnumerable<SelectListItem>;
                                }
                                <select asp-for="CustomerId" class="form-control form-control-rounded" required>
                                    <option value="">-- Select Customer --</option>
                                    @if (customerList != null)
                                    {
                                        foreach (var item in customerList)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CustomerId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="InvoiceDate" class="form-label fw-bold">
                                    Invoice Date <span class="text-danger">*</span>
                                </label>
                                <input asp-for="InvoiceDate" type="date" class="form-control form-control-rounded" required />
                                <span asp-validation-for="InvoiceDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3 mt-4">Products</h6>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="products-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Unit Count</th>
                                        <th>Selling Price</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody id="products-body">
                                    <tr class="product-row" data-index="0">
                                        <td>
                                            @{
                                                var productList = ViewBag.ProductList as IEnumerable<SelectListItem>;
                                            }
                                            <select name="Items[0].ProductPackageId" class="form-control form-control-rounded product-select" required>
                                                <option value="">Select Product</option>
                                                @if (productList != null)
                                                {
                                                    foreach (var item in productList)
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            <input type="number" name="Items[0].Quantity"
                                                   class="form-control form-control-rounded quantity"
                                                   value="1" min="1" required />
                                        </td>
                                        <td>
                                            <input type="number" name="Items[0].UnitCount"
                                                   class="form-control form-control-rounded units"
                                                   value="1" min="1" required />
                                        </td>
                                        <td>
                                            <input type="number" name="Items[0].SellingPrice"
                                                   class="form-control form-control-rounded price"
                                                   value="0" step="0.01" min="0" required />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-rounded total"
                                                   value="0" readonly />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger btn-sm remove-row">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <button type="button" class="btn btn-light btn-round px-3 mt-2" id="add-product">
                            <i class="fa fa-plus"></i> Add Product
                        </button>

                        <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3 mt-4">Totals</h6>

                        <div class="row">
                            <div class="col-md-4 form-group mb-3">
                                <label class="form-label fw-bold">Total Amount</label>
                                <input type="number" id="total-amount-display" class="form-control form-control-rounded"
                                       value="0.00" readonly />
                            </div>

                            <div class="col-md-4 form-group mb-3">
                                <label asp-for="Discount" class="form-label fw-bold">Discount</label>
                                <input asp-for="Discount" type="number" step="0.01"
                                       class="form-control form-control-rounded" value="0" id="discount" />
                            </div>

                            <div class="col-md-4 form-group mb-3">
                                <label class="form-label fw-bold">Net Amount</label>
                                <input type="number" id="net-amount-display" class="form-control form-control-rounded"
                                       value="0.00" readonly />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label asp-for="AmountReceived" class="form-label fw-bold">
                                    Amount Received (Optional)
                                </label>
                                <input asp-for="AmountReceived" type="number" step="0.01"
                                       class="form-control form-control-rounded" value="0" />
                                <small class="text-muted" style="font-size: 0.75rem">
                                    If entered, a receipt will be generated automatically.
                                </small>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-end">
                            <button type="submit" class="btn btn-light btn-round px-5 add-item-submit shadow-sm">
                                <i class="fa-solid fa-check me-2"></i> Submit Invoice
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        let rowIndex = 1;

        // Add Product Row
        document.getElementById('add-product').addEventListener('click', function() {
            const tbody = document.getElementById('products-body');
            const firstRow = tbody.querySelector('.product-row');
            const newRow = firstRow.cloneNode(true);

            // Update indices
            newRow.setAttribute('data-index', rowIndex);
            newRow.querySelectorAll('input, select').forEach(function(input) {
                const name = input.getAttribute('name');
                if (name) {
                    input.setAttribute('name', name.replace(/
$$
\d+
$$/, '[' + rowIndex + ']'));
                }
                if (input.classList.contains('quantity') || input.classList.contains('units')) {
                    input.value = 1;
                } else if (input.classList.contains('price') || input.classList.contains('total')) {
                    input.value = 0;
                }
            });

            // Reset select
            const select = newRow.querySelector('.product-select');
            if (select) {
                select.selectedIndex = 0;
            }

            tbody.appendChild(newRow);
            rowIndex++;
        });

        // Remove Row
        document.getElementById('products-body').addEventListener('click', function(e) {
            if (e.target.closest('.remove-row')) {
                const tbody = document.getElementById('products-body');
                if (tbody.querySelectorAll('.product-row').length > 1) {
                    e.target.closest('.product-row').remove();
                    updateTotals();
                } else {
                    alert('You must have at least one product!');
                }
            }
        });

        // Calculate Totals
        function updateTotals() {
            let totalAmount = 0;

            document.querySelectorAll('.product-row').forEach(function(row) {
                const quantity = parseFloat(row.querySelector('.quantity').value) || 0;
                const units = parseFloat(row.querySelector('.units').value) || 0;
                const price = parseFloat(row.querySelector('.price').value) || 0;
                const rowTotal = quantity * units * price;

                row.querySelector('.total').value = rowTotal.toFixed(2);
                totalAmount += rowTotal;
            });

            const discount = parseFloat(document.getElementById('discount').value) || 0;
            const netAmount = totalAmount - discount;

            document.getElementById('total-amount-display').value = totalAmount.toFixed(2);
            document.getElementById('net-amount-display').value = netAmount.toFixed(2);
        }

        // Listen to input changes
        document.getElementById('products-body').addEventListener('input', updateTotals);
        document.getElementById('discount').addEventListener('input', updateTotals);
    });
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                icon: 'success',
                confirmButtonColor: '#10B981',
                timer: 3000
            });
        });
    </script>
}