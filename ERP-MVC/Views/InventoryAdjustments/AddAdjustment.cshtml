                <script>
                    const addProductBtn = document.getElementById("addProductBtn");
                    const addFirstProductBtn = document.getElementById("addFirstProductBtn");
                    const tableBody = document.getElementById("adjustmentBody");

                    function createRow() {
                      const emptyRow = document.getElementById("emptyRow");
                      if (emptyRow) emptyRow.remove();

                      const row = document.createElement("tr");

                      row.innerHTML = `
                        <td>
                          <select class="form-control product-select">
                            <option selected disabled>Select Product</option>
                            <option value="Mouse">Mouse</option>
                            <option value="Keyboard">Keyboard</option>
                            <option value="Monitor">Monitor</option>
                            <option value="Printer">Printer</option>
                          </select>
                        </td>

                        <td><input type="number" class="form-control oldQty" value="0"></td>
                        <td><input type="number" class="form-control newQty" value="0"></td>
                        <td><input type="text" class="form-control difference" value="0" readonly></td>
                        <td><input type="text" class="form-control changeType" value="No Change" readonly></td>

                        <td class="text-center">
                          <button class="btn btn-danger btn-sm removeRow">
                            <i class="fa fa-trash"></i>
                          </button>
                        </td>
                      `;

                      tableBody.appendChild(row);

                      const oldQtyInput = row.querySelector(".oldQty");
                      const newQtyInput = row.querySelector(".newQty");
                      const diffInput = row.querySelector(".difference");
                      const changeTypeInput = row.querySelector(".changeType");

                      function updateDifference() {
                        const oldQty = parseInt(oldQtyInput.value) || 0;
                        const newQty = parseInt(newQtyInput.value) || 0;

                        const diff = newQty - oldQty;
                        diffInput.value = diff;

                        if (diff > 0) changeTypeInput.value = "Increase";
                        else if (diff < 0) changeTypeInput.value = "Decrease";
                        else changeTypeInput.value = "No Change";
                      }

                      oldQtyInput.addEventListener("input", updateDifference);
                      newQtyInput.addEventListener("input", updateDifference);

                      // Remove row
                      row.querySelector(".removeRow").addEventListener("click", () => {
                        row.remove();

                        if (tableBody.children.length === 0) {
                          tableBody.innerHTML = `
                            <tr id="emptyRow">
                              <td colspan="6" class="text-center text-muted">No products added yet</td>
                            </tr>
                          `;

                          // Make Add First Product button visible again
                          addFirstProductBtn.style.display = "inline-block";
                        }
                      });
                    }

                    // Add First Product
                    addFirstProductBtn.addEventListener("click", () => {
                      createRow();
                      addFirstProductBtn.style.display = "none"; // hide after first click
                    });

                    // Add Product
                    addProductBtn.addEventListener("click", createRow);
                </script>



